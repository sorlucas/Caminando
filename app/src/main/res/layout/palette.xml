<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergio.caminando.maps.RoutePaletteFragment"
    android:clickable="false"
    android:background="@color/background_floating_material_light">

    <RelativeLayout
        android:id="@+id/palette_layer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:layout_gravity="center_horizontal|top">

        <AutoCompleteTextView
            android:id="@+id/autocomplete_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/autocomplete_hint"
            android:textColor="@android:color/primary_text_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/powered_by_google_dark"
            android:layout_alignEnd="@id/autocomplete_places"
            android:layout_below="@id/autocomplete_places" />

        <Spinner
            android:id="@+id/layers_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/autocomplete_places"
            android:layout_below="@id/autocomplete_places"/>


    </RelativeLayout>

</FrameLayout>
