<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_primary_dark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Route Information"
            android:id="@+id/textView4"
            android:background="@color/theme_primary_light"
            android:padding="8dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutRouteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/route_name_editext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/route_name"
                android:inputType="textAutoComplete"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/description_route_editext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description_create_route"
                android:inputType="textMultiLine"
                android:minLines="3" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>