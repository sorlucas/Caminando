<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_primary_dark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Photo, Cartel ..."
            android:id="@+id/textView4"
            android:background="@color/theme_primary_light"
            android:padding="8dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutTopics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/topics_routes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/topics"
                android:inputType="textAutoComplete"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutMaxAttendees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/max_attendees_editext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_route_max_attendees"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>