<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CreateRoutesActivity">

    <fragment
        android:name="com.example.sergio.caminando.ui.CreateRouteFragment"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_create_route"/>

    <fragment android:name="com.example.sergio.caminando.ui.BroseSessionsFragment"
        android:id="@+id/sessions_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_sessions"/>
</LinearLayout>
