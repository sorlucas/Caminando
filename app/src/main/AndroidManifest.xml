<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sergio.caminando" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <activity
        android:name=".ui.CreateRoutesActivity"
        android:label="@string/title_activity_create_routes"
        android:parentActivityName=".ui.BrowseSessionsActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.sergio.ruteando.ui.BrowseSessionsActivity" />
    </activity>

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.IOSched" >
        <activity
            android:name=".ui.BrowseSessionsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WelcomeActivity"
            android:theme="@style/Theme.IOSched.Welcome" />
        <activity
            android:name=".endpoints.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".ui.CreateRouteActivity"
            android:label="@string/title_activity_create_routes" >
        </activity>
    </application>

</manifest>
