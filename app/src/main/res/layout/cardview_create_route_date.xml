<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_primary_dark">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/start_date_route_editext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_route_start_date"
                android:inputType="date"/>
        </android.support.design.widget.TextInputLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonStartDate"
            android:src="@android:drawable/ic_menu_my_calendar"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonStartTime"
            android:src="@drawable/ic_alarm_holo_dark"/>

    </LinearLayout>

</android.support.v7.widget.CardView>